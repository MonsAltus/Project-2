{{!-- This template should display all products on a given category --}}


<h2>{{category.name}}</h2>
<p>{{description}}</p>

<div>
{{#each products}}
<a href="/product/{{id}}">
<img src="{{image}}">
<h4>{{name}} - ${{price}}</h4>
<p>{{description}}</p>
</a>
{{/each}}


{{!--
Product parameters returned include: 'id', 'name', 'description', 'image', 'price', 'stock'
Category parameters returned include: id, name, description
--}}